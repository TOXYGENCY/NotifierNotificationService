{
  "Logging": {
    "LogLevel": {
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "UseSwagger": true,
  "RabbitMq": {
    "HostName": "rabbitmq",
    "UserName": "admin",
    "Password": "admin",
    "NotificationsQueueName": "notifications",
    "StatusUpdatesQueueName": "status_updates"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[NOTIFICATION.SVC] {Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/notification-service-log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[NOTIFICATION.SVC] {Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "Redis": {
    "ConnectionString": "redis:6379",
    "InstanceName": "notifier",
    "Statuses": {
      "CategoryName": "statuses"
    },
    "Streams": {
      "Statuses": "status_log"
    }
  }
}
